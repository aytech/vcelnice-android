<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cz.vcelnicerudna">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppVcelnice"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".BaseActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.vseuslugi.cz"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsActivity"
            android:label="@string/app_name_news"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PricesActivity"
            android:label="@string/app_name_prices"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EmailActivity"
            android:label="@string/app_name_email"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ReserveActivity"
            android:label="@string/app_name_reservation"
            android:parentActivityName=".PricesActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PricesActivity" />
        </activity>
        <activity
            android:name=".NewsDetailActivity"
            android:label="@string/app_name_news_article"
            android:parentActivityName=".NewsActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewsActivity" />
        </activity>
        <activity
            android:name=".PhotoActivity"
            android:label="@string/app_name_photo"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PhotoViewActivity"
            android:parentActivityName=".PhotoActivity"
            android:theme="@style/ToolbarColoredBackArrow"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PhotoActivity" />
        </activity>
    </application>
</manifest>